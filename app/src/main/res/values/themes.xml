<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CSquare" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextStyle1">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <style name="CustomEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">44dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">52dp</item>
        <item name="android:layout_marginRight">52dp</item>
        <item name="android:background">@drawable/rectangle_background</item>
        <item name="android:ems">10</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">7dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">105dp</item>
        <item name="android:layout_marginRight">105dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@drawable/rectangle_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.CSquare.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CSquare.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CSquare.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>